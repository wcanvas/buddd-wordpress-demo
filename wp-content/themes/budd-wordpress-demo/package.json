{
	"name": "wcanvas-boilerplate",
	"version": "2.0.1",
	"private": true,
	"description": "White Canvas Theme",
	"main": "webpack.config.js",
	"engines": {
		"node": ">=20.11.0",
		"npm": ">=10.0.0"
	},
	"scripts": {
		"dev": "npm-run-all --parallel wpstart wpbuildblocksmanifest tailwindwatch tw-editor-watch tw-admin-watch",
		"wpstart": "wp-scripts start --webpack-copy-php --webpack-src-dir=blocks --output-path=assets/build/blocks",
		"build": "npm-run-all --parallel wpbuild wpbuildblocksmanifest tailwindbuild tw-editor-build tw-admin-build",
		"wpbuild": "wp-scripts build --webpack-copy-php --webpack-src-dir=blocks --output-path=assets/build/blocks",
		"wpbuildblocksmanifest": "wp-scripts build-blocks-manifest --input=blocks --output=assets/build/block-manifest.php",
		"block": "cd ./blocks && npx @wordpress/create-block@latest --variant dynamic --no-plugin --template ../dev-scripts/block_template",
		"block:react": "cd ./blocks && npx @wordpress/create-block@latest --no-plugin --template ../dev-scripts/react_block_template",
		"block:plugin:interactivity": "cd ../../plugins && npx @wordpress/create-block@latest --template @wordpress/create-block-interactive-template",
		"component": "node ./dev-scripts/component_template",
		"setup": "node ./dev-scripts/rename-theme.js",
		"lint:css": "wp-scripts lint-style --quiet",
		"lint:js": "wp-scripts lint-js --quiet",
		"fix:css": "wp-scripts lint-style --quiet --fix",
		"fix:js": "wp-scripts lint-js --fix",
		"lint:css:report": "wp-scripts lint-style --quiet --custom-formatter=node_modules/stylelint-junit-formatter/index.js --output-file report-css.xml",
		"lint:js:report": "wp-scripts lint-js -o report-js.xml -f junit",
		"tailwindwatch": "tailwindcss -i ./assets/styles/index.css -o ./assets/build/tailwind.css --watch",
		"tw-editor-watch": "tailwindcss -i ./assets/styles/editor.css -o ./assets/build/tw-editor.css --watch",
		"tw-admin-watch": "tailwindcss -i ./assets/styles/admin.css -o ./assets/build/tw-admin.css --watch",
		"tailwindbuild": "tailwindcss -i ./assets/styles/index.css -o ./assets/build/tailwind.css --minify",
		"tw-editor-build": "tailwindcss -i ./assets/styles/editor.css -o ./assets/build/tw-editor.css --minify",
		"tw-admin-build": "tailwindcss -i ./assets/styles/admin.css -o ./assets/build/tw-admin.css --minify"
	},
	"devDependencies": {
		"@wordpress/scripts": "^30.16.0",
		"browser-sync": "2.29.3",
		"browser-sync-webpack-plugin": "2.3.0",
		"dotenv": "^16.5.0",
		"glob": "^11.0.2",
		"mustache": "^4.2.0",
		"npm-run-all": "^4.1.5",
		"postcss-import": "^16.1.0",
		"stylelint-junit-formatter": "^0.2.2",
		"tailwindcss": "^3.4.10",
		"webpack-remove-empty-scripts": "^1.0.4"
	},
	"dependencies": {
		"a11y-dialog": "^8.1.3",
		"axios": "^1.9.0",
		"gsap": "^3.13.0",
		"swiper": "^11.2.6",
		"tom-select": "^2.4.3"
	}
}
